{% extends "gestionFilmsAdminBundle::base.html.twig" %}
{% block title %}{{ parent() }} | mon profil {% endblock %}
{% block stylesheets %}
{{ parent() }}
{% endblock %}
{% block content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="row-fluid">
    <div class="span12">
        <h3 class="heading">{{ 'form.label'|trans }} </h3>
        <div class="row-fluid">
            <div class="span12">
                <div class="vcard">
                    <img class="thumbnail" src="{{asset('img/Picture.png')}}" width="100" height="100" alt="" />
                    <ul>
                        <li class="v-heading">
                            <a href="{{ path('fos_user_profile_edit')}}" class="btn btn-inverse" >{{ 'profile.edit.submit'|trans }}</a> 	               
                            <a href="{{ path('fos_user_change_password')}}" class="btn btn-info" >{{ 'change_password.submit'|trans }}</a> 
                        </li>
                        <li>
                            <span class="item-key">{{ 'form.username'|trans }}  </span>
                            <div class="vcard-item">{{ user.username }}</div>
                        </li>
                        <li>
                            <span class="item-key">{{ 'form.email'|trans }}</span>
                            <div class="vcard-item">{{ user.email }}</div>
                        </li>
                        {% if user.nom is not null or user.prenom is not null %}
                        <li>
                            <span class="item-key">{{ 'form.nom'|trans }}</span>
                            <div class="vcard-item">{{ user.nom }} {{ user.prenom }}</div>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{asset('js/gebo_user_static.js')}}"></script>
{% endblock %}