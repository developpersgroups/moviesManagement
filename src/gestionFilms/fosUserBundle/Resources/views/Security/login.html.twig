{% trans_default_domain 'FOSUserBundle' %}
{% block content %}
{% block fos_user_content %} 
<body class="login_page">
    <div class="login_box">
        <form action="{{ path('fos_user_security_check') }}" method="post" id="login_form">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="top_b">Identification à Gestion des films</div>
            <div class="alert alert-info alert-login">
                Veuillez taper votre login et mot de passe pour se connecter. 
            </div>
            <div class="cnt_b">
                <div class="formRow">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span><input type="text" required="true" id="username" name="_username" placeholder="E-mail" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="formRow">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span><input  required="true" type="password" id="password" name="_password" placeholder="Mot de passe" />
                    </div>
                </div>
                <div class="formRow clearfix">
                    <label for="remember_me" class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> 
                    {{ 'security.login.remember_me'|trans }}</label>
                </div>
            </div>
            <div class="btm_b clearfix">
                <input type="submit" value="{{'security.login.submit'|trans}}" class="btn btn-inverse pull-right" name="_submit"/>					
                <span class="link_reg"><a href="{{ path('fos_user_registration_register') }}">Vous n'êtes pas inscris? Cliquez ici </a></span>
            </div>
        </form>
    </div>
    {% endblock fos_user_content %}
    {% endblock %}
    {% block body %}
    {% endblock %}
    {% block javascripts %}
    <script src="{{ asset('js/jquery.min.js')}}"></script>
    <script src="{{ asset('js/jquery.actual.min.js')}}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js')}}"></script>
    {% endblock %}